						{
							"key": "grant_type",
							"value": "{{OBTAIN_TOKEN_GRANT_TYPE}}",
							"type": "text"
						},
						{
							"key": "scope",
							"value": "{{OBTAIN_TOKEN_SCOPE}}",
							"type": "text"
						},
						{
							"key": "username",
							"value": "{{USERNAME}}",
							"type": "text"
						},
						{
							"key": "password",
							"value": "{{PASSWORD}}",
							"type": "text"
