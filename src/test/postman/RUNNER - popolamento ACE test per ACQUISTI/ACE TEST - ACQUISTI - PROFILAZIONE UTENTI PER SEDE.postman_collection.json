			"name": "Richiesta token JWT",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var data = JSON.parse(responseBody);",
							"postman.setGlobalVariable(\"ACCESS_TOKEN\", data.access_token);",
							"postman.setGlobalVariable(\"REFRESH_TOKEN\", data.refresh_token);",
							"// postman.setGlobalVariable(\"userName\", \"enzo.lucia\");",
							"// postman.setGlobalVariable(\"siglaRuolo\", \"staffAmministrativo\");",
							"// postman.setGlobalVariable(\"NR_IDNSIP\", \"226100\");",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "{{OBTAIN_TOKEN_AUTHORIZATION}}"
					},
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "grant_type",
							"value": "{{OBTAIN_TOKEN_GRANT_TYPE}}",
							"type": "text"
						},
						{
							"key": "scope",
							"value": "{{OBTAIN_TOKEN_SCOPE}}",
							"type": "text"
						},
						{
							"key": "username",
							"value": "{{USERNAME}}",
							"type": "text"
						},
						{
							"key": "password",
							"value": "{{PASSWORD}}",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "http://ace-webapp.test.si.cnr.it:5555/api/authentication/auth/oauth/token",
					"protocol": "http",
					"host": [
						"ace-webapp",
						"test",
						"si",
						"cnr",
						"it"
					],
					"port": "5555",
					"path": [
						"api",
						"authentication",
						"auth",
						"oauth",
						"token"
					]
				},
				"description": "Ottiene il token (impostare una passoword)."
			},
			"response": []
		},
		{
			"name": "Ricerca ID_USER e ID_PERSONA by userId",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var data = JSON.parse(responseBody);",
							"pm.globals.set(\"ID_USER\", Number(data.id));",
							"console.log(\"ID_USER: \" + pm.globals.get(\"ID_USER\"))",
							"",
							"pm.globals.set(\"ID_PERSONA\", Number(data.persona.id));",
							"console.log(\"ID_PERSONA: \" + pm.globals.get(\"ID_PERSONA\"))",
							"",
							"",
							"pm.test(\"UserName non presente\", function () {",
							"    pm.expect(pm.response.text()).to.include(\"username\");",
							"});",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{ACCESS_TOKEN}}"
					}
				],
				"url": {
					"raw": "http://ace-webapp.test.si.cnr.it:5555/api/ace/v1/utente/{{userName}}",
					"protocol": "http",
					"host": [
