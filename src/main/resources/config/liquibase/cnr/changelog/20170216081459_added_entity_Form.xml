<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Form.
    -->
    <changeSet id="20170216081459-1" author="jhipster">
        <createTable tableName="form">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="process_definition_key" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="version" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="task_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="form" type="varchar">
                <constraints nullable="false"/>
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>

        <loadData encoding="UTF-8"
                  file="config/liquibase/cnr/form.csv"
                  separator=";"
                  tableName="form"/>
        <loadData encoding="UTF-8"
                  file="config/liquibase/cnr/form-acquisti-v1.csv"
                  separator=";"
                  tableName="form"/>
        <loadData encoding="UTF-8"
                  file="config/liquibase/cnr/form-accordi-internazionali-v1.csv"
                  separator=";"
                  tableName="form"/>
    </changeSet>

    <!--OGNI update dei contenuti caricati nella tabella all`avvio dell`applicazione ha bisogno di un NUOVO changeSet (con stesso "id"-"identificativo incrementale")-->
    <!--non occorre eseguire il clear check sum ma basta un maven clean-->
    <changeSet id="20170216081459-2" author="Paolo" runOnChange='true'>
        <loadUpdateData encoding="UTF-8"
                        file="config/liquibase/cnr/modifiche/form-modificate.csv"
                        primaryKey="id"
                        schemaName="public"
                        separator=";"
                        tableName="form">
            <column name="id" type="numeric"/>
            <column name="process_definition_key" type="string"/>
            <column name="version" type="string"/>
            <column name="task_id" type="string"/>
            <column name="form" type="string"/>
        </loadUpdateData>
    </changeSet>
</databaseChangeLog>
