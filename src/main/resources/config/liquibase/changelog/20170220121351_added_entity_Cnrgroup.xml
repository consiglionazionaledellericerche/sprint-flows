<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Cnrgroup.
    -->
    <changeSet id="20170220121351-1" author="jhipster">
        <createTable tableName="cnrgroup">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="display_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>

        <createTable tableName="cnrgroup_parents">
            <column name="parents_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="cnrgroups_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="cnrgroups_id, parents_id" tableName="cnrgroup_parents"/>

        <createTable tableName="cnrgroup_member_users">
            <column name="member_users_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="cnrgroups_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="cnrgroups_id, member_users_id" tableName="cnrgroup_member_users"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/cnrgroup.csv"
                  separator=";"
                  tableName="cnrgroup"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/cnrgroup_parents.csv"
                  separator=";"
                  tableName="cnrgroup_parents"/>
    </changeSet>
</databaseChangeLog>
